@page
@model PS.Web.Admin.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Add new employee";
}

<section class="section" id="add_employee">
    <div class="container flex">
        <form id="form_add_station" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <fieldset class="field__set">
                <legend class="form__legend">Add a new Employee</legend>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.Title" class="control-label"></label>
                    <select asp-for="AddEmployeeVM.Title" class="form__selectlist" asp-items="Html.GetEnumSelectList<PS.Core.Helpers.UserPrefix>()">
                        <option>Please Select</option>
                    </select>
                    <span asp-validation-for="AddEmployeeVM.Title" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.FirstName" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.FirstName" class="form__input" placeholder="First name" aria-label="First name" />
                    <span asp-validation-for="AddEmployeeVM.FirstName" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.LastName" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.LastName" class="form__input" placeholder="Last name" aria-label="Last name" />
                    <span asp-validation-for="AddEmployeeVM.LastName" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.Initials" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.Initials" class="form__input" placeholder="initials" aria-label="initials" />
                    <span asp-validation-for="AddEmployeeVM.Initials" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.UserName" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.UserName" class="form__input" placeholder="Username" aria-label="Username" />
                    <span asp-validation-for="AddEmployeeVM.UserName" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.DOB" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.DOB" class="form__input" placeholder="Date of birth" aria-label="Date of birth" />
                    <span asp-validation-for="AddEmployeeVM.DOB" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.Password" class="control-label"></label>
                    <input asp-for="AddEmployeeVM.Password" class="form__input" placeholder="Password" aria-label="Password" />
                    <span asp-validation-for="AddEmployeeVM.Password" class="text-danger"></span>
                </div>
                <div class="form__margin">
                    <label asp-for="AddEmployeeVM.PrimaryDepartment" class="control-label"></label>
                    <select asp-for="AddEmployeeVM.PrimaryDepartment" class="form__selectlist" asp-items="Html.GetEnumSelectList<PS.Core.Models.PrimaryDepartment>()">
                        <option>Please Select</option>
                    </select>
                    <span asp-validation-for="AddEmployeeVM.PrimaryDepartment" class="text-danger"></span>
                </div>
                
                <div class="form__margin">
                    <input type="submit" valuse="SUBMIT" class="btn btn__default form__button" />
                </div>
            </fieldset>
        </form>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

    </div>
</section>
