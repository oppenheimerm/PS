<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PetrolSist.com - @ViewData["Title"] </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/new/root.css" />
    <link rel="stylesheet" href="~/css/new/pages.css" />
    <link rel="stylesheet" href="~/css/new/layout.css" />
    <link rel="stylesheet" href="~/css/new/buttons__forms.css" />

</head>
<body>
    <div class="body-wrap">
        <nav id="navbar-main">
            <div class="container">
                <div class="menu-btn-wrap">
                    <button id="menu-btn">
                        <span class="material-symbols-sharp">
                            menu
                        </span>
                    </button>
                    <button id="menu-btn-close">
                        <span class="material-symbols-sharp">
                            close
                        </span>
                    </button>
                </div>
                <div class="logo">
                    <img class="header-logo" src="~/img/assets/dashboard-logo-black.png" alt="PetrolSist" />
                </div>
                <div class="nav-wrap-rhs grid">
                    <div class="nav-right-wrap grid">
                        <div class="nav-search">
                            <input id="navbar-search"  class="form__input" placeholder="search here" type="text" aria-label="search input" />
                            <button class="btn"><i class="fas fa-search"></i></button>
                        </div>
                        <div class="notifications-settings-wrap">
                            <!--  theme-toggler starts -->
                            <div class="theme-toggler">
                                <span class="material-symbols-sharp active">
                                    light_mode
                                </span>
                                <span class="material-symbols-sharp">
                                    dark_mode
                                </span>
                            </div>
                            <!--  theme-toggler ends -->
                            <!--  profile  -->
                            <div class="profile">
                                <div class="info">
                                    <p>Hey, Michiel</p>
                                    <small class="text-muted">Admin</small>
                                </div>
                                <div class="profile-photo">
                                    <img src="img/assets/profile-pic-1.jpg" alt="MO">
                                </div>
                                <div class="settings-wrap">
                                    <span class="material-symbols-sharp">
                                        settings
                                    </span>
                                </div>
                                <div class="logout-wrap">

                                    <span class="material-symbols-sharp">
                                        logout
                                    </span>
                                </div>
                            </div>
                            <!--  profile ends -->
                        </div>
                    </div>
                </div>
            </div>            
        </nav>
        <div class="container add-top-margin">
            <aside>
                <!-- Sidebar -->
                <div class="sidebar">
                    <a href="#" class="active">
                        <span class="material-symbols-sharp">
                            home
                        </span>
                        <h3>Home</h3>
                    </a>

                    <a href="#">
                        <span class="material-symbols-sharp">
                            dashboard
                        </span>
                        <h3>Dashboard</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            groups
                        </span>
                        <h3>Employees</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            local_gas_station
                        </span>
                        <h3>Stations</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            contacts
                        </span>
                        <h3>Vendors</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            crowdsource
                        </span>
                        <h3>Customers</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            chat_bubble
                        </span>
                        <h3>Messages</h3>
                        <span class="message-count">3</span>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            settings
                        </span>
                        <h3>Settings</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            logout
                        </span>
                        <h3>Logout</h3>
                    </a>
                </div>
                <!-- Sidebar Ends -->
            </aside>
            <!-- Main -->
            <main>
                @RenderBody()       
            </main>
            <!-- Main Ends -->
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/layoutJS.js"></script>
</body>
</html>