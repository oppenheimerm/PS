@page
@model PS.Web.Admin.Pages.Countries.IndexModel
@{
	ViewData["Title"] = "View all countries";
}

<section class="section" id="all_countries">
    <div class="allcountries__wrap container flex">
        <p class="section__label touppersection__label">Countries</p>
        <a class="page__links" asp-page="./Create">New</a>
        <table class="table table__middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Countries)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @item.CountryName
                        </td>
                        <td>
                            @item.CountryCode
                        </td>
                        <td>
                            <div class="table__actions-wrap">
                                <a class="btn btn__small" asp-page="Details" asp-route-id="@item.Id">Details</a>

                                <a class="btn btn__small" asp-page="Edit" asp-route-id="@item.Id">
                                    Edit
                                </a>
                                <a class="btn danger btn__small" asp-page="/admin/deletepost" asp-route-id="@item.Id">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>
