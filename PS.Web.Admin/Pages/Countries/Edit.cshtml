@page "{id}"
@model PS.Web.Admin.Pages.Countries.EditModel
@{
	ViewData["Title"] = $"Edit item: {Model.Country.CountryName}";
}

<section class="section" id="edit_country">
	<div class="container flex">
		<form id="form_edit-create" method="post" action="">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input type="hidden" asp-for="Country.Id" />
			<fieldset class="field__set">
				<legend class="form__legend">Edit Country: @Model.Country.CountryName</legend>
				<div class="form__margin">
					<label asp-for="Country.CountryName" class="control-label"></label>
					<input asp-for="Country.CountryName" class="form__input" placeholder="Category name" aria-label="Country name" />
					<span asp-validation-for="Country.CountryName" class="text-danger"></span>
				</div>
				<div class="form__margin">
					<label asp-for="Country.CountryCode" class="control-label"></label>
					<input asp-for="Country.CountryCode" class="form__input" placeholder="Required 3 letter country code" aria-label=" Required 3 letter country code" />
					<span asp-validation-for="Country.CountryCode" class="text-danger"></span>
				</div>
				<div class="form__margin">
					<input type="submit" valuse="SUBMIT" class="btn btn__default form__button" />
				</div>

			</fieldset>
		</form>
	</div>

